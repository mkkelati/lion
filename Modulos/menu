#!/bin/bash

# LION VPS Manager - Main Menu System
# TLS_AES_256_GCM_SHA384 Enhanced Security

cor1='\033[1;36m' # Cyan
cor2='\033[1;33m' # Yellow  
cor3='\033[1;31m' # Red
