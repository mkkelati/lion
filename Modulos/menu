;;
*) 
echo ""
echo -e "${cor3}ğŸ¦ Invalid Option! Please select 0-19${sem}"
sleep 2
;;
esac

# Clear and show header again for next iteration
clear
echo -e "${cor1}ğŸ¦â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•ğŸ¦${sem}"
echo -e "${cor1}ğŸ¦                  LION VPS MANAGER v2.0                ğŸ¦${sem}"
echo -e "${cor1}ğŸ¦â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•ğŸ¦${sem}"
echo ""
