echo ""
echo -e "${cor2}ğŸ” Security Protocol: ${tls_status}"
echo -e "${cor2}ğŸŒ Server IP: ${cor5}$vps_ip${sem}"
echo -e "${cor2}ğŸ‘‘ System: ${cor5}$sistema${sem}"
echo -e "${cor2}ğŸ’¾ RAM: ${cor5}$ram${sem} | ğŸ’½ SWAP: ${cor5}$swap${sem}"
echo -e "${cor2}â° Uptime: ${cor5}$uptime${sem}"
echo -e "${cor2}ğŸ‘¥ LION Users: ${cor5}$lion_users${sem}"
echo -e "${cor2}ğŸ”’ Stunnel Status: ${cor5}$stunnel_status${sem}"
echo ""
echo -e "${cor1}ğŸ¦â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•ğŸ¦${sem}"
echo ""

# Main Menu Loop
while true; do
echo -e "${cor2}ğŸ¦ LION VPS MANAGER - SELECT OPTION ğŸ¦${sem}"
echo ""
echo -e "${cor2}ğŸ‘¥ USER MANAGEMENT:${sem}"
echo -e "${cor3}[01]${cor5} â€¢ ${cor2}Create SSH User${sem}"
echo -e "${cor3}[02]${cor5} â€¢ ${cor2}Remove SSH User${sem}"
echo -e "${cor3}[03]${cor5} â€¢ ${cor2}Change User Password${sem}"
echo -e "${cor3}[04]${cor5} â€¢ ${cor2}Change User Limit${sem}"
echo -e "${cor3}[05]${cor5} â€¢ ${cor2}User Details${sem}"
echo ""
echo -e "${cor2}ğŸ”’ TLS/STUNNEL MANAGEMENT:${sem}"
echo -e "${cor3}[06]${cor5} â€¢ ${cor2}Configure Stunnel TLS${sem}"
echo -e "${cor3}[07]${cor5} â€¢ ${cor2}Start Stunnel Service${sem}"
echo -e "${cor3}[08]${cor5} â€¢ ${cor2}Stop Stunnel Service${sem}"
echo -e "${cor3}[09]${cor5} â€¢ ${cor2}Restart Stunnel Service${sem}"
echo -e "${cor3}[10]${cor5} â€¢ ${cor2}Generate TLS Certificates${sem}"
echo ""
echo -e "${cor2}ğŸ“Š MONITORING & TOOLS:${sem}"
echo -e "${cor3}[11]${cor5} â€¢ ${cor2}Monitor Connections${sem}"
echo -e "${cor3}[12]${cor5} â€¢ ${cor2}System Information${sem}"
echo -e "${cor3}[13]${cor5} â€¢ ${cor2}Speed Test${sem}"
echo -e "${cor3}[14]${cor5} â€¢ ${cor2}Security Settings${sem}"
echo -e "${cor3}[15]${cor5} â€¢ ${cor2}Backup/Restore Users${sem}"
echo ""
echo -e "${cor2}âš™ï¸ SYSTEM TOOLS:${sem}"
echo -e "${cor3}[16]${cor5} â€¢ ${cor2}Update LION Manager${sem}"
echo -e "${cor3}[17]${cor5} â€¢ ${cor2}Restart Services${sem}"
echo -e "${cor3}[18]${cor5} â€¢ ${cor2}System Optimization${sem}"
echo -e "${cor3}[19]${cor5} â€¢ ${cor2}View Logs${sem}"
