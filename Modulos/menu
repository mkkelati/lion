uptime=$(uptime | awk -F'up ' '{print $2}' | awk -F',' '{print $1}')
processes=$(ps aux | wc -l)
lion_users=$(cat /home/usuarios.db 2>/dev/null | wc -l)

# TLS Security Status
tls_status="${cor4}TLS_AES_256_GCM_SHA384 Active${sem}"
stunnel_status=$(systemctl is-active stunnel4 2>/dev/null || echo "inactive")

# Header
echo -e "${cor1}ğŸ¦â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•ğŸ¦${sem}"
echo -e "${cor1}ğŸ¦                  LION VPS MANAGER v2.0                ğŸ¦${sem}"
